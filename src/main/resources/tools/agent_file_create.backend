{
  "tools": [
    {
      "type": "function",
      "name": "agent_file_create",
      "description": "创建或更新 agents 目录下的智能体配置文件（仅支持 Agent JSON v2，新结构 modelConfig/toolConfig）。",
      "parameters": {
        "type": "object",
        "properties": {
          "agentId": {
            "type": "string",
            "description": "目标 agentId"
          },
          "key": {
            "type": "string",
            "description": "目标 agent key（优先于 agentId）"
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ONESHOT",
              "REACT",
              "PLAN_EXECUTE"
            ]
          },
          "modelConfig": {
            "type": "object",
            "properties": {
              "providerKey": {
                "type": "string"
              },
              "model": {
                "type": "string"
              },
              "reasoning": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean"
                  },
                  "effort": {
                    "type": "string",
                    "enum": [
                      "LOW",
                      "MEDIUM",
                      "HIGH"
                    ]
                  }
                },
                "additionalProperties": false
              },
              "temperature": {
                "type": "number"
              },
              "top_p": {
                "type": "number"
              },
              "max_tokens": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          },
          "toolConfig": {
            "type": [
              "object",
              "null"
            ],
            "properties": {
              "backends": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "frontends": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "actions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          },
          "systemPrompt": {
            "type": "string",
            "description": "ONESHOT/REACT 的快捷系统提示"
          },
          "planSystemPrompt": {
            "type": "string"
          },
          "executeSystemPrompt": {
            "type": "string"
          },
          "summarySystemPrompt": {
            "type": "string"
          },
          "maxSteps": {
            "type": "integer"
          },
          "output": {
            "type": "string"
          },
          "toolPolicy": {
            "type": "string"
          },
          "verify": {
            "type": "string"
          },
          "budget": {
            "type": "object",
            "properties": {
              "maxModelCalls": {
                "type": "integer"
              },
              "maxToolCalls": {
                "type": "integer"
              },
              "maxSteps": {
                "type": "integer"
              },
              "timeoutMs": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          },
          "config": {
            "type": "object",
            "description": "可选，支持把 agent 配置字段放在 config 对象中"
          }
        },
        "required": [
          "key"
        ],
        "additionalProperties": false
      }
    }
  ]
}
