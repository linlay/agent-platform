{
  "tools": [
    {
      "type": "function",
      "name": "agent_file_create",
      "description": "创建或更新 agents 目录下的智能体配置文件（仅支持 Agent JSON v2）。",
      "parameters": {
        "type": "object",
        "properties": {
          "agentId": {
            "type": "string",
            "description": "目标 agentId"
          },
          "key": {
            "type": "string",
            "description": "目标 agent key（优先于 agentId）"
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "providerKey": {
            "type": "string"
          },
          "providerType": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ONESHOT",
              "REACT",
              "PLAN_EXECUTE"
            ]
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "systemPrompt": {
            "type": "string",
            "description": "ONESHOT/REACT 的快捷系统提示"
          },
          "planSystemPrompt": {
            "type": "string"
          },
          "executeSystemPrompt": {
            "type": "string"
          },
          "summarySystemPrompt": {
            "type": "string"
          },
          "reasoningEnabled": {
            "type": "boolean"
          },
          "reasoningEffort": {
            "type": "string",
            "enum": ["LOW", "MEDIUM", "HIGH"]
          },
          "maxSteps": {
            "type": "integer"
          },
          "compute": {
            "type": "string"
          },
          "output": {
            "type": "string"
          },
          "toolPolicy": {
            "type": "string"
          },
          "verify": {
            "type": "string"
          },
          "budget": {
            "type": "object",
            "properties": {
              "maxModelCalls": {
                "type": "integer"
              },
              "maxToolCalls": {
                "type": "integer"
              },
              "maxSteps": {
                "type": "integer"
              },
              "timeoutMs": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          },
          "config": {
            "type": "object",
            "description": "可选，支持把 agent 配置字段放在 config 对象中"
          }
        },
        "required": [
          "key"
        ],
        "additionalProperties": false
      }
    }
  ]
}
