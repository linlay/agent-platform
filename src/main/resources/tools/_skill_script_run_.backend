{
  "tools": [
    {
      "type": "function",
      "name": "_skill_script_run_",
      "description": "执行 skills/<skill>/ 下的脚本文件。仅支持 .py 和 .sh，且脚本路径必须在目标 skill 目录内。",
      "parameters": {
        "type": "object",
        "properties": {
          "skill": {
            "type": "string",
            "description": "skill 目录名，例如 screenshot"
          },
          "script": {
            "type": "string",
            "description": "skill 内相对脚本路径，例如 scripts/take_screenshot.py"
          },
          "args": {
            "type": "array",
            "description": "脚本参数数组（按顺序传递）",
            "items": {
              "type": "string"
            }
          },
          "timeoutMs": {
            "type": "integer",
            "description": "超时时间（毫秒），默认 10000，最大 120000"
          }
        },
        "required": [
          "skill",
          "script"
        ],
        "additionalProperties": false
      }
    }
  ]
}
